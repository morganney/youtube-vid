{
  "name": "youtube-vid",
  "version": "1.0.0-alpha.6",
  "description": "HTML Custom Element for YouTube videos with a title, icon and an accordion-like UX.",
  "main": "dist/youtubeVid/element.js",
  "type": "module",
  "bin": {
    "ytvcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/youtubeVid/element.js"
    },
    "./defined": {
      "import": "./dist/youtubeVid/defined.js"
    },
    "./element": {
      "import": "./dist/youtubeVid/element.js"
    },
    "./youTube/defined": {
      "import": "./dist/youTube/defined.js"
    },
    "./youTube/element": {
      "import": "./dist/youTube/element.js"
    },
    "./styles": {
      "import": "./dist/ytvStyles.css"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=16.17.0"
  },
  "engineStrict": true,
  "scripts": {
    "prettier": "prettier -w .",
    "lint:css": "stylelint src/**/*.css",
    "lint:js": "eslint . src --ext .ts,.tsx --max-warnings 0",
    "lint": "npm run lint:js && npm run lint:css",
    "watch": "tsx watch.ts",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:deploy": "npm run build && cp index.html cdn.html dist",
    "preview": "vite preview",
    "prepack": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "youtube",
    "html",
    "custom element",
    "accordion",
    "details",
    "summary"
  ],
  "author": "Morgan Ney <morganney@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/morganney/youtube-vid.git"
  },
  "bugs": {
    "url": "https://github.com/morganney/youtube-vid/issues"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/clean-css": "^4.2.11",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "browser-sync": "^3.0.2",
    "clean-css": "^5.3.3",
    "eslint": "^8.56.0",
    "html-minifier-terser": "^7.2.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 90,
    "semi": false,
    "singleQuote": true
  }
}
